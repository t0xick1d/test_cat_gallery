{
   "compilerOptions": {
      "outDir": "build/dist",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "rootDir": "src",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "module": "esnext",
      "target": "es5",
      "moduleResolution": "node",
      "esModuleInterop": true
   },
   "exclude": [
      "tailwind.config.js",
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
   ],
   "types": ["typePatches"]
}
